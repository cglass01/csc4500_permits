
<h1>Permits</h1>

<%= form_tag(vehicle_permits_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Permits" %>
<%= submit_tag "Search" %>
<% end %>
<% if @vehicle_permits.empty? %>
  <p>There are no permits containing the term(s) <%= params[:search] %>.</p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Permit ID</th>
      <th>Date issued</th>
      <th>Issued by</th>
      <th>Date entered</th>
      <th>Entered by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_permits.each do |vehicle_permit| %>
      <tr>
        <td><%= vehicle_permit.vehicle_permit_id %></td>
        <td><%= vehicle_permit.date_issued %></td>
        <td><%= vehicle_permit.issued_by %></td>
        <td><%= vehicle_permit.date_entered %></td>
        <td><%= vehicle_permit.entered_by %></td>
        <td><%= link_to 'Show', vehicle_permit %></td>
        <td><%= link_to 'Edit', edit_vehicle_permit_path(vehicle_permit) %></td>
        <td><%= link_to 'Destroy', vehicle_permit, method: :delete, data: { confirm: 'Are you sure?' } if policy(vehicle_permit).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permit', new_vehicle_permit_path %>
