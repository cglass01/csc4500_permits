
<h1>Emergency Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Home phone</th>
      <th>Cell phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emergency_contacts.each do |emergency_contact| %>
      <tr>
        <td><%= emergency_contact.last_name %></td>
        <td><%= emergency_contact.first_name %></td>
        <td><%= emergency_contact.address %></td>
        <td><%= emergency_contact.city %></td>
        <td><%= emergency_contact.state %></td>
        <td><%= emergency_contact.zip %></td>
        <td><%= emergency_contact.home_phone %></td>
        <td><%= emergency_contact.cell_phone %></td>
        <td><%= link_to 'Show', emergency_contact if policy(emergency_contact).show? %></td>
        <td><%= link_to 'Edit', edit_emergency_contact_path(emergency_contact) if policy(emergency_contact).edit?  %></td>
        <td><%= link_to 'Destroy', emergency_contact, method: :delete, data: { confirm: 'Are you sure?' } if policy(emergency_contact).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Emergency Contact', new_emergency_contact_path %>
